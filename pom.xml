            <version>1.1.1</version>
        </dependency>
        <dependency>
            <groupId>com.ibm.cloud.api</groupId>
            <artifactId>java-rest-client</artifactId>
            <version>2.1</version>
            <scope>system</scope>
            <systemPath>${project.basedir}/lib/java-rest-client-2.1.jar</systemPath>
